<h1> Add your info for your <%= @new_recipe.name() %> recipe </h1>

<form action="/ingredients" method="post">
  <label for="ingredient">Ingredient</label>
  <input id="ingredient" name="ingredient" class="form-control" type="text">
  <input value="<%= @new_recipe.id() %>" name="recipe_id" class="form-control" type="hidden">

  <button type="submit" class="btn">Add ingredient</button>
</form>

<% if @ingredients != nil %>
  <ul>
  <% @ingredients.each() do |ingredient| %>
      <li><%= ingredient.name() %></li>
  <% end %>
  </ul>
<% end %>

<form action="/instructions" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="instructions">Instructions</label>
  <textarea id="instructions" name="instructions" class="form-control" type="text" rows="6"></textarea>
  <input value="<%= @new_recipe.id() %>" name="recipe_id" class="form-control" type="hidden">

  <button type="submit" class="btn">Add instructions and submit recipe</button>
</form>
